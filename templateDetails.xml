<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/2.5/template-install.dtd">
<extension version="3.6.1" type="template" client="site">
        <name>STEMpunk</name>
        <version>0.0.1</version>
        <creationDate>October 2015</creationDate>
        <author>Ben Klein</author>
        <authorEmail>robobenklein@robosane.net</authorEmail>
        <copyright>Copyright (C) Ben Klein, 2015.</copyright>
        <description>The L&amp;N STEMpunks Joomla Template.</description>
        <files>
                <filename>index.php</filename>
                <filename>component.php</filename>
                <filename>templateDetails.xml</filename>
                <folder>css</folder>
                <folder>images</folder>
                <folder>js</folder>
                <folder>resources</folder>
		            <folder>language</folder>
        </files>
        <positions>
                <position>position-0</position><!-- Header Backgrounded -->
                <position>position-1</position><!-- Navigation -->
                <position>footer-bottom-left</position><!-- Footer Left -->
                <position>footer-bottom-right</position><!-- Footer Right -->
                <position>footer-bottom-far-right</position><!-- Footer Far Right -->
                <position>position-3</position><!-- Above content -->
                <position>position-2</position><!-- Below Content -->
        </positions>
        <config>
                <fields name="params">
                        <fieldset name="advanced">
                                <field name="siteLogo" type="media" default=""
                                        label="Site Logo"
                                        description="Logo to be used at the left of the navbar." />

                                <field name="sitename" type="text" default=""
                                        label="Site Display Name"
                                        description="The name of the site."
                                        filter="string" />

                                <field name="twittercards" type="radio" default="0"
                                        label="Enable Twitter Cards"
                                        description="Choose to enable the addition of the twitter cards meta tags on each page."
                                        class="btn-group btn-group-yesno"
                                        >
                                        <option value="1">JYES</option>
					                              <option value="0">JNO</option>
                                </field>

                                <field name="twitter_sitename" type="text" default="@lnstempunks"
                                        label="Twitter site name"
                                        description="The @username to associate this card with for analytics. (include the @)"
                                        filter="string" />

                                <field name="twitter_default-title" type="text" default="L&amp;N STEMpunks"
                                        label="Default Twitter Title"
                                        description="The Title of the article to show when the real one can't be loaded."
                                        filter="string" />

                                <field name="twitter_default-desc" type="text" default=""
                                        label="Default Twitter Description"
                                        description="The Description for Twitter to access when one can't be loaded from the article introtext."
                                        filter="string" />

                        </fieldset>
                </fields>
        </config>
</extension>
