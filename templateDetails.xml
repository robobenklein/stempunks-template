<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/2.5/template-install.dtd">
<extension version="1.0.3" type="template" method="upgrade" client="site">
        <name>STEMpunk</name>
        <version>1.0.3</version>
        <creationDate>Oct 2015 to Feb 2016</creationDate>
        <author>Ben Klein</author>
        <authorEmail>robobenklein@robosane.net</authorEmail>
        <copyright>Copyright (C) Ben Klein, 2015.</copyright>
        <description>The STEMpunks Joomla Template.</description>
        <files>
                <filename>index.php</filename>
                <filename>component.php</filename>
                <filename>templateDetails.xml</filename>
                <folder>css</folder>
                <folder>images</folder>
                <folder>js</folder>
                <folder>resources</folder>
		            <folder>language</folder>
        </files>
        <positions>
                <position>position-0</position><!-- Header Backgrounded -->
                <position>navigation-items</position><!-- Navigation Bar Items -->
                <position>position-1</position><!-- Navigation -->
                <position>footer-bottom-left</position><!-- Footer Left -->
                <position>footer-bottom-right</position><!-- Footer Right -->
                <position>footer-bottom-far-right</position><!-- Footer Far Right -->
                <position>position-3</position><!-- Above content -->
                <position>position-2</position><!-- Below Content -->
        </positions>
        <config>
                <fields name="params">
                        <fieldset name="advanced">
                                <field name="siteLogo" type="media" default="templates/stempunk/images/logo.png"
                                        label="Site Logo"
                                        description="Logo to be used at the left of the navbar." />

                                <field name="background1" type="media" default="templates/stempunk/images/background1.jpg"
                                        label="Background image 1"
                                        description="Images to be randomly selected for the page background." />

                                <field name="background2" type="media" default="templates/stempunk/images/background2.jpg"
                                        label="Background image 2"
                                        description="Images to be randomly selected for the page background." />

                                <field name="background3" type="media" default="templates/stempunk/images/background3.jpg"
                                        label="Background image 3"
                                        description="Images to be randomly selected for the page background." />

                                <field name="sitename" type="text" default=""
                                        label="Site Display Name"
                                        description="The name of the site."
                                        filter="string" />

                        </fieldset>
                </fields>
        </config>
</extension>
